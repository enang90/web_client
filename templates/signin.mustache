<section id="signin" class="lightbox">
	<form novalidate="novalidate">
		<h1>Welcome to Tribe.im</h1>
		<p id="signin-invalid" class="hide warn">Oops, please enter a valid IM address.</p>
		<p>
			<label for="signin-address">IM Address</label>
			<input type="text" id="signin-address" required="required" placeholder="john.smith@example.com" pattern=".*@.*" value="boshtest@jabber.org"/>
		</p>
		<p>
			<label for="signin-password">Password</label>
			<input type="password" id="signin-password" value="boshtest"/>
		</p>
		<p>
			<input type="submit" value="Sign In"/>
		</p>
	</form>
</section>
